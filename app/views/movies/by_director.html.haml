
%h1 All Movies Directed by #{@director}


%table#movies
  %thead
    %tr
      %th{:class => @title_header}= link_to 'Movie Title', by_director_url(:sort => 'title', :id => @id), :id => 'title_header'
      %th Rating
      %th Director
      %th{:class => @date_header}= link_to 'Release Date', by_director_url(:sort => 'release_date', :id => @id), :id => 'release_date_header'
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.director
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Back to movie list', movies_path
